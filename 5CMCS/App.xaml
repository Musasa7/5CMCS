<Application x:Class="_5CMCS.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <!-- ===== Colors (light brown surfaces, red buttons) ===== -->
        <SolidColorBrush x:Key="BrandRed" Color="red"/>
        <SolidColorBrush x:Key="BrandRedDark" Color="Red"/>
        <SolidColorBrush x:Key="Ink900" Color="Black"/>
        <SolidColorBrush x:Key="Ink700" Color="Black"/>
        <SolidColorBrush x:Key="Ink500" Color="Black"/>

        <!-- All surfaces are light brown (no white) -->
        <SolidColorBrush x:Key="Surface"    Color="BurlyWood"/>
        <!-- BurlyWood -->
        <SolidColorBrush x:Key="SurfaceAlt" Color="BurlyWood"/>
        <!-- Tan -->
        <SolidColorBrush x:Key="DefaultBg"  Color="BurlyWood"/>

        <!-- Keep these feature backgrounds but make them light brown too -->
        <SolidColorBrush x:Key="ApprovalsBg"     Color="BurlyWood"/>
        <SolidColorBrush x:Key="DashboardBg"     Color="BurlyWood"/>
        <SolidColorBrush x:Key="StatusTrackerBg" Color="BurlyWood"/>
        <SolidColorBrush x:Key="SubmitBg"        Color="BurlyWood"/>
        <SolidColorBrush x:Key="UploadBg"        Color="BurlyWood"/>

        <SolidColorBrush x:Key="Danger" Color="Red"/>

        <!-- ===== Typography ===== -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Ink900}"/>
        </Style>
        <Style x:Key="TitleText" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="SubtleText" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="Foreground" Value="{StaticResource Ink500}"/>
        </Style>

        <!-- ===== Card ===== -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Surface}"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderBrush" Value="{StaticResource SurfaceAlt}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- ===== Buttons (all red) ===== -->
        <Style x:Key="BtnBase" TargetType="Button">
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource BrandRed}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BrandRedDark}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg" CornerRadius="8"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter Margin="6,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bg" Property="Opacity" Value="0.5"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="{StaticResource BrandRedDark}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Bring back the keyed styles your views reference -->
        <Style x:Key="BtnPrimary" TargetType="Button" BasedOn="{StaticResource BtnBase}" />
        <Style x:Key="BtnOutline" TargetType="Button" BasedOn="{StaticResource BtnBase}" />
        <Style x:Key="BtnGhost"   TargetType="Button" BasedOn="{StaticResource BtnBase}" />

        <!-- Sidebar Nav Button (still red, left-aligned text) -->
        <Style x:Key="NavButton" TargetType="Button" BasedOn="{StaticResource BtnBase}">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="12,10"/>
        </Style>

        <!-- ===== DataGrid (no white) ===== -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource Surface}"/>
            <Setter Property="RowBackground" Value="{StaticResource SurfaceAlt}"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource Surface}"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="All"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="BorderBrush" Value="{StaticResource SurfaceAlt}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource Ink900}"/>
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource SurfaceAlt}"/>
            <Setter Property="Foreground" Value="{StaticResource Ink900}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="{StaticResource Surface}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="10,8"/>
        </Style>

        <!-- ===== FadeHost (used by ContentHost) ===== -->
        <Style TargetType="ContentControl" x:Key="FadeHost">
            <Setter Property="Tag">
                <Setter.Value>
                    <Binding RelativeSource="{RelativeSource Self}" Path="Content" NotifyOnTargetUpdated="True"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Opacity" Value="1"/>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Binding.TargetUpdated">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation From="0" To="1" Duration="0:0:0.18" Storyboard.TargetProperty="Opacity"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
</Application>