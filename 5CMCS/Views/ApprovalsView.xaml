<UserControl x:Class="_5CMCS.Views.ApprovalsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock Text="Approvals — PC/AM" Style="{StaticResource TitleText}"/>
        <Border Style="{StaticResource Card}" Margin="0,12,0,0">
            <StackPanel Margin="14">
                <DataGrid AutoGenerateColumns="False" IsReadOnly="True" Height="300">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ClaimId" Binding="{Binding ClaimId}"/>
                        <DataGridTextColumn Header="Lecturer" Binding="{Binding Lecturer}"/>
                        <DataGridTextColumn Header="Month" Binding="{Binding Month}"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Verify"  Style="{StaticResource BtnOutline}" Margin="0,0,8,0" Click="Verify_Click"/>
                    <Button Content="Approve" Style="{StaticResource BtnPrimary}" Margin="0,0,8,0" Click="Approve_Click"/>
                    <Button Content="Reject"  Style="{StaticResource BtnGhost}" Foreground="{StaticResource Danger}" Click="Reject_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>