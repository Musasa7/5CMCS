<UserControl x:Class="_5CMCS.Views.SubmitClaimView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock Text="Submit Claim" Style="{StaticResource TitleText}"/>
        <Border Style="{StaticResource Card}" Margin="0,12,0,0">
            <Grid Margin="14">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <StackPanel Width="220" Margin="0,0,12,0">
                        <TextBlock Text="Month"/>
                        <ComboBox Margin="0,4,0,0">
                            <ComboBoxItem>2025-08</ComboBoxItem>
                            <ComboBoxItem IsSelected="True">2025-09</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Width="260">
                        <TextBlock Text="Contract"/>
                        <ComboBox Margin="0,4,0,0">
                            <ComboBoxItem>CON-001 (R480/hr)</ComboBoxItem>
                            <ComboBoxItem>CON-002 (R520/hr)</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>

                <TextBlock Grid.Row="1" Text="Claim lines" Margin="0,8,0,6" FontWeight="SemiBold"/>
                <DataGrid Grid.Row="1" AutoGenerateColumns="False" Height="240" Margin="0,28,0,0" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Date" Binding="{Binding WorkDate}"/>
                        <DataGridTextColumn Header="Module" Binding="{Binding Module}"/>
                        <DataGridTextColumn Header="Hours" Binding="{Binding Hours}"/>
                        <DataGridTextColumn Header="Notes" Binding="{Binding Notes}"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- ONE button only -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                    <Button Content="Submit" Style="{StaticResource BtnPrimary}" Click="Submit_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </StackPanel>
</UserControl>