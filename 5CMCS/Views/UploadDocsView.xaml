<UserControl x:Class="_5CMCS.Views.UploadDocsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock Text="Upload Supporting Documents" Style="{StaticResource TitleText}"/>
        <Border Style="{StaticResource Card}" Margin="0,12,0,0">
            <StackPanel Margin="100">
                <TextBlock Text="Choose a source to upload documents:" Style="{StaticResource SubtleText}" Margin="0,0,0,10"/>

                <!-- Browse Files -->
                <Button Content="Browse Files" Style="{StaticResource BtnPrimary}" Width="200" Margin="0,0,0,8" Click="BrowseFiles_Click"/>

                <!-- OneDrive -->
                <Button Content="OneDrive" Style="{StaticResource BtnOutline}" Width="200" Click="OneDrive_Click"/>

            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>