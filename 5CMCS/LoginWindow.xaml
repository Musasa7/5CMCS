<Window x:Class="_5CMCS.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign in — 5CMCS" Height="360" Width="520"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="{StaticResource DefaultBg}">
    <Grid>
        <Border Width="460" Height="260" Background="{StaticResource DefaultBg}" CornerRadius="12"
            HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="400"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="Black" FontSize="18" Margin="0,0,8,0"/>
                    <TextBlock Text="Contract Monthly Claim System" FontSize="18" FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Margin="0,12,0,0">
                    <TextBlock Text="Username"/>
                    <TextBox x:Name="TxtUser" Margin="0,4,0,0"/>

                    <TextBlock Text="Password" Margin="0,8,0,0"/>
                    <PasswordBox x:Name="TxtPass" Margin="0,4,0,0"/>

                    <Button Content="Sign in" Margin="0,16,0,0" Click="SignIn_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>